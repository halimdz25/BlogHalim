{% extends 'base.html.twig' %}
{% block body %}
    <h1>Inscription sur le site</h1>
    {{ form_start(form) }}
    {{ form_row(form.username,{'label':'Nom d\'utilisateur','attr':{'placeholder':'Nom d\'utilisateur' }}) }}
    {{ form_row(form.email,{'label':'email','attr':{'placeholder':'Votre email' }}) }}
    {{ form_row(form.password,{'label':'mot de passe','attr':{'placeholder':'Un mot de passe' }}) }}
    {{ form_row(form.confirm_password,{'label':'Confirmation de mot de passe','attr':{'placeholder':'Confirmer le mot de passe' }}) }}

    <button type="submit" class="btn btn-success">Inscription!</button>
    {{ form_end(form) }}

{% endblock %}